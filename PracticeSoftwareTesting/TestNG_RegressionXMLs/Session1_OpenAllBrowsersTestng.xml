<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="com.shubhamklogic.selenium.practice.browserOpen">
  
  <parameter name="browsers" value="chrome,firefox,edge,safari"/>
	  	<!-- 
	 		Desc: Parameter=browsers
	 		This parameter configures at which browser the test cases would be executed.
	 	-->
  
  <parameter name="browserDriverSetupMode" value="executableBrowserDrivers" />
	  	<!-- 
			Desc: Parameter=browserDriverSetupMode 
			This parameter tests the setup the browser driver via = webDriverManager / executableBrowserDrivers
	  	-->
  
  <test name="BrowsersOpenTest">
  		<classes>
  			<class name="com.shubhamklogic.practice.selenium.OpenAllBrowsersTest"/>
  		</classes>
  </test>
</suite>